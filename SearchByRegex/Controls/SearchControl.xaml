<UserControl x:Class="SearchByRegex.Controls.SearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SearchByRegex.Controls"
             xmlns:st="http://schemas.spicytaco.io/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>

        <st:StackPanel Orientation="Horizontal" Margin="0 3 0 3" MarginBetweenChildren="5">

            <TextBox x:Name="SearchBox" st:StackPanel.Fill="Fill" />
            <Button x:Name="SearchButton" Content="Search" Width="75"/>

        </st:StackPanel>
        
    </Grid>
    
</UserControl>